<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked.
    -->
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="auto_sync_camera_videos"
        android:title="@string/pref_title_auto_sync_camera_videos" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="auto_sync_camera_videos"
        android:key="auto_sync_videos_on_wifi_only"
        android:title="@string/pref_title_auto_sync_on_wifi_only" />
    
</PreferenceScreen>